extends layout

block content
    h2 Update User
    form(method="POST", action=`/update-user/${user._id}`)
        .w3-row-padding
            .w3-half
                .form-group
                    label First Name *
                    input.w3-input.w3-border(type="text", name="firstName", value=user.firstName, required)
            .w3-half
                .form-group
                    label Last Name *
                    input.w3-input.w3-border(type="text", name="lastName", value=user.lastName, required)
        
        .form-group
            label Date of Birth *
            input.w3-input.w3-border(type="date", name="dateOfBirth", value=user.dateOfBirth.toISOString().split('T')[0], required)
        
        .form-group
            label Email *
            input.w3-input.w3-border(type="email", name="email", value=user.email, required)
        
        .form-group
            label Phone Number *
            input.w3-input.w3-border(type="tel", name="phoneNumber", value=user.phoneNumber, required)
        
        .form-group
            label Address 1 *
            input.w3-input.w3-border(type="text", name="address1", value=user.address1, required)
        
        .form-group
            label Address 2
            input.w3-input.w3-border(type="text", name="address2", value=user.address2)
        
        .w3-row-padding
            .w3-half
                .form-group
                    label City *
                    input.w3-input.w3-border(type="text", name="city", value=user.city, required)
            .w3-quarter
                .form-group
                    label Postal Code *
                    input.w3-input.w3-border(type="text", name="postalCode", value=user.postalCode, required)
            .w3-quarter
                .form-group
                    label Country *
                    input.w3-input.w3-border(type="text", name="country", value=user.country, required)
        
        .form-group
            label User Notes
            textarea.w3-input.w3-border(name="userNotes", rows="4")= user.userNotes
        
        .w3-margin-top
            button.w3-button.w3-blue(type="submit") Update User
            a.w3-button.w3-grey(href="/users") Cancel
            button.w3-button.w3-red(type="submit", formaction=`/delete-user/${user._id}`, onclick="return confirm('Are you sure you want to delete this user?')") Delete User