extends layout

block content
    h2 All Users
    if users.length > 0
        .w3-responsive
            table.w3-table-all
                thead
                    tr.w3-light-grey
                        th First Name
                        th Last Name
                        th Email
                        th Phone
                        th City
                        th Actions
                tbody
                    each user in users
                        tr
                            td= user.firstName
                            td= user.lastName
                            td= user.email
                            td= user.phoneNumber
                            td= user.city
                            td
                                a.w3-button.w3-blue(href=`/update-user/${user._id}`) Edit
    else
        p No users found. 
        a.w3-button.w3-green(href="/add-user") Add First User